<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A1.Manager"
             Title="Manager">

    <ContentPage.Content>
        <AbsoluteLayout>
            <Button Text="History" 
                    TextColor="Blue" 
                    BackgroundColor="HotPink" 
                    AbsoluteLayout.LayoutBounds="0.5,0.4,110,50" 
                    AbsoluteLayout.LayoutFlags="PositionProportional" 
                    Clicked="History_Clicked"/>
            
            <Button Text="Restock" 
                    TextColor="Blue" 
                    BackgroundColor="HotPink" 
                    AbsoluteLayout.LayoutBounds="0.5,0.5,110,50" 
                    AbsoluteLayout.LayoutFlags="PositionProportional" 
                    Clicked="Restock_Clicked"/>
            
            <Button Text="Add New Product" 
                    TextColor="Blue" 
                    BackgroundColor="HotPink" 
                    AbsoluteLayout.LayoutBounds="0.5,0.6,110,50" 
                    AbsoluteLayout.LayoutFlags="PositionProportional" 
                    Clicked="AddItem_Clicked"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>